<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'shared/errors', object: @user %>
    <%= form_for(@user) do  |f|  %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', autofocus: true, required: true %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', required: true %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', required: true %>

      <%= f.label :password_confirmation, "Confirm your password" %>
      <%= f.password_field :password_confirmation, class: 'form-control', required: true %>

      <%= f.submit "Create your account", class: 'btn btn-primary' %>
    <% end %>
    <p>Already an existing user? <%= link_to "Log in here", login_path %></p>
  </div>
</div>
