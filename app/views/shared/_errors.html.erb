<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <h2>Oops! We found <%= pluralize(object.errors.count, "error")%> with your submission .</h2>
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
